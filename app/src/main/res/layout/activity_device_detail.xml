<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DeviceDetailActivity">

    <include layout="@layout/header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvXingHao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:text="型号：XXXX"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tvDianLiang"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="电量：51%"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tvSheBeiBianHao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备编号：2020000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textColor="#ff666666"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tvShuJuGengXinShiJian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据更新时间：2020-10-27 9:18:00"
        android:textColor="#ff666666"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        />

    <include layout="@layout/line_5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDeviceDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>